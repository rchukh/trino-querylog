<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="PrestoQueryLog" packages="">
    <Appenders>
        <RollingFile name="JsonRollingFile">
            <FileName>/mnt0/var/log/presto/presto-querylog.log</FileName>
            <FilePattern>/mnt0/var/log/presto/%d{yyyy-MM-dd-hh}-%i.log</FilePattern>
            <!-- <JsonLayout charset="UTF-8" includeStacktrace="false"
                        compact="true" eventEol="true" objectMessageAsJsonObject="true"/> -->
<!--            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>-->
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss}|%-5level|%msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="JsonRollingFile"/>
        </Root>
    </Loggers>
</Configuration>
